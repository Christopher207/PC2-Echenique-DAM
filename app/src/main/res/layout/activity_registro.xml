<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <EditText
        android:id="@+id/etEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Nombre del Equipo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etAnio"
        app:layout_constraintEnd_toEndOf="@+id/etAnio" />

    <EditText
        android:id="@+id/etAnio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Año de Fundación"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etTitulos"
        app:layout_constraintStart_toStartOf="@+id/etTitulos" />

    <EditText
        android:id="@+id/etTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Número de Títulos Ganados"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etImagen"
        app:layout_constraintEnd_toEndOf="@+id/etImagen" />

    <EditText
        android:id="@+id/etImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="263dp"
        android:ems="10"
        android:hint="URL Imagen Equipo"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/etImagen"
        app:layout_constraintTop_toBottomOf="@+id/etImagen" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Registro Liga 1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>